@model LoginCredentialsVM
<div class="row h-100">
    <form asp-action="index" asp-controller="auth" method="post">
        <div class="text-danger mb-3" asp-validation-summary="All"></div>

        <div class="mb-3 ">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" required />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="mb-3 ">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" required />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="mb-3 ">
            <input class="form-check-input" asp-for="RememberMe" required />
            <label class="form-label" asp-for="RememberMe"></label>
        </div>

        <div class="mb-3 ">

            <a asp-action="ForgotPassword" asp-controller="auth">Forgot Password?</a>
            <a asp-action="signup" asp-controller="auth">Signup?</a>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>