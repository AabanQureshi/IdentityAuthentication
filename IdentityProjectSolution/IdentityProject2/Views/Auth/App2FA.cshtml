@model byte[]

<h1>Authenticator App 2FA</h1>
<p>Follow the steps to enable 2FA</p>


<h3>Step 1: Scan this QR code with your Authenticator App</h3>
<div>
    <img src="@string.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" height="160" width="160" />
</div>


<h3>Step 2: Enter the code generated by the app</h3>
<form asp-action="App2FA" asp-controller="auth" method="post">
    <div class="mb-3 text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 w-auto">
        <label>Enter the code generated by the app</label>
        <input type="text" class="form-control" name="SecurityCode" required />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>


